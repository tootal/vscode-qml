{
	"name": "qmlext",
	"displayName": "qmlext",
	"description": "QML language support.",
	"version": "1.0.1",
	"publisher": "qsyttkx",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/qsyttkx/vscode-qml"
	},
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Programming Languages",
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:qml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "qml",
				"extensions": [
					".qml",
					".qmlproject"
				],
				"configuration": "./qml.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "qml",
				"scopeName": "source.qml",
				"path": "./syntaxes/qml.tmLanguage"
			}
		],
		"configuration": {
			"title": "QML",
			"properties": {
				"qmlext.qmlformat": {
					"type": "string",
					"default": "qmlformat",
					"description": "Specifies the qmlformat program path"
				},
				"qmlext.qmlls": {
					"type": "string",
					"default": "",
					"description": "Specifies the qmlls program path"
				},
				"qmlext.qmllsBuildDir": {
					"type": "string",
					"default": "",
					"description": "Specifies the qmlls build-dir arg"
				},
				"qmlext.normalize": {
					"type": "boolean",
					"default": "true",
					"description": "Reorders the attributes of the objects according to the QML Coding Guidelines."
				}
			}
		}
	},
	"capabilities": {
		"documentFormattingProvider": "true"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.68.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.2"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1"
	}
}
